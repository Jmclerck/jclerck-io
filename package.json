{
  "name": "jclerck.io",
  "version": "0.2.0",
  "author": "Jon Clerck <jmclerck@icloud.com>",
  "description": "",
  "keywords": [],
  "license": "MIT",
  "main": "server.js",
  "repository": "https://github.com/Jmclerck/jclerck.io",
  "scripts": {
    "autoprefixr": "postcss --use autoprefixer --autoprefixer.browsers 'last 2 versions' public/styles/*.css -d public/dist/",
    "babel": "babel public/src -d public/dist --source-maps",
    "build": "npm run lint; npm run babel; npm run autoprefixr",
    "development": "node --harmony --inspect .",
    "lint": "eslint --fix --ignore-pattern '**/dist' '*.js'",
    "monitor": "snyk monitor",
    "now-build": "snyk auth $SNYK_TOKEN; npm run build",
    "postinstall": "snyk protect",
    "start": "node --harmony .",
    "test": "snyk test"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-cli": "^6.10.1",
    "babel-eslint": "^7.1.1",
    "babel-polyfill": "^6.16.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-stage-0": "^6.5.0",
    "bunyan": "^1.8.5",
    "eslint": "^3.11.1",
    "postcss-cli": "^2.6.0"
  },
  "dependencies": {
    "dropcap.js": "^1.0.1",
    "jsonwebtoken": "^7.2.0",
    "koa": "2",
    "koa-bodyparser": "next",
    "koa-send": "^3.2.0",
    "koa-static": "^3.0.0",
    "ms": "^0.7.2",
    "normalize.css": "^5.0.0",
    "snyk": "^1.21.2",
    "whatwg-fetch": "^2.0.1"
  },
  "babel": {
    "presets": [
      "latest",
      "stage-0"
    ],
    "plugins": [],
    "sourceMaps": "inline"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "serviceworker": true
    },
    "globals": {
      "google": true
    },
    "parser": "babel-eslint"
  },
  "now": {
    "env": {
      "SECRET": "@password",
      "SNYK_TOKEN": "@snyk"
    }
  }
}
