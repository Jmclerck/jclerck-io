{
  "name": "jclerck.io",
  "version": "0.2.0",
  "author": "Jon Clerck <jmclerck@icloud.com>",
  "description": "",
  "keywords": [],
  "license": "MIT",
  "main": "server.js",
  "repository": "https://github.com/Jmclerck/jclerck.io",
  "scripts": {
    "autoprefixr": "postcss --use autoprefixer --autoprefixer.browsers 'last 2 versions' public/styles/*.css -d public/dist/",
    "babel": "babel public/src -d public/dist --source-maps",
    "build": "npm run lint; npm run babel; npm run autoprefixr",
    "lint": "xo --fix 'public/src/**/*.js'",
    "monitor": "snyk monitor",
    "now-build": "snyk auth $SNYK_TOKEN; npm run build; npm run monitor",
    "postinstall": "snyk protect",
    "start": "node .",
    "test": "snyk test"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-cli": "^6.10.1",
    "babel-polyfill": "^6.16.0",
    "babel-preset-latest": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "postcss-cli": "^2.6.0",
    "xo": "^0.17.0"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "dropcap.js": "^1.0.1",
    "express": "^4.14.0",
    "http-auth": "^3.1.0",
    "jsonwebtoken": "^7.1.9",
    "ms": "^0.7.2",
    "normalize.css": "^5.0.0",
    "snyk": "^1.19.1",
    "whatwg-fetch": "^2.0.0"
  },
  "babel": {
    "presets": [
      "latest",
      "stage-0"
    ],
    "plugins": [],
    "sourceMaps": "inline"
  },
  "xo": {
    "esnext": true,
    "rules": {
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "object-curly-spacing": [
        1,
        "always"
      ],
      "operator-assignment": [
        1,
        "never"
      ]
    },
    "global": [
      "Headers",
      "Response",
      "caches",
      "document",
      "fetch",
      "google",
      "navigator",
      "self",
      "window"
    ]
  }
}
